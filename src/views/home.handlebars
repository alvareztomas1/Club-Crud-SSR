<div class="home-buttons">
    <a class="btn btn-outline-light" href="/add-team"> Add Team</a>
</div>

{{>home/teams-list teamsData = teamsData}}

<div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="liveToast" class="toast align-items-center text-bg-{{toast.type}} border-0 {{#if toast.hidden}}''{{else}}d-none{{/if}}" role="alert" aria-live="assertive"
        aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                {{toast.message}} <i class="bi bi-check-circle"></i>
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"
                aria-label="Close"></button>
        </div>
    </div>
</div>

